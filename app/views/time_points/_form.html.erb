<%= form_for @time_point, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Заголовок, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Описание, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Дата_начала, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :start_date, :class => 'date_select' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Максимальный_порог, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :high_threshold, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Важность, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :importance, :class => 'number_field' %>
    </div>
  </div>
  
  <% if @timeline %>
    <%= f.hidden_field :timeline_id, value: @timeline.id %>
  <% else %>
    <div class="control-group">
    <%= f.label :timeline_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :timeline_id, :class => 'number_field' %>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
