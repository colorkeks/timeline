<%= form_for @time_point, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Заголовок, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Описание, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>


  <div class="control-group">
     <div class="field">
        <%= f.label :Дата_начала, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :start_date, 'data-behaviour' => 'datepicker' %><br />
        </div>
     </div>  
  </div>


  <div class="control-group">
    <%= f.label :Максимальный_порог, :class => 'control-label'%> 
    <div class="controls">
      <%= f.select(:high_threshold, options_for_select([['14 лет', 40],
                                                     ['7 лет', 37],
                                                     ['3 года', 34],
                                                     ['год', 30],
                                                     ['пол года', 26],
                                                     ['3 месяца', 23],
                                                     ['месяц', 19],
                                                     ['неделя',14]]), {}, {class: "text_field"}) %>
    </div>
  </div>


    <div class="control-group">
    <%= f.label :Важность, :class => 'control-label'%> 
    <div class="controls">
      <%= f.select(:importance, options_for_select([['огромный', 80],
                                                     ['большой', 60],
                                                     ['стандартный', 50],
                                                     ['не большой', 40],
                                                     ['маленький', 30],
                                                     ['крошечный', 20]]), {}, {class: "text_field"}) %>
    </div>
  </div>

  
  <% if @timeline %>
    <%= f.hidden_field :timeline_id, value: @timeline.id %>
  <% else %>
    <div class="control-group">
    <%= f.label :timeline_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :timeline_id, :class => 'number_field' %>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
