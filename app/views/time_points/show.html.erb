<%- model_class = TimePoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Заголовок) %>:</strong></dt>
  <dd><%= @time_point.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Описание) %>:</strong></dt>
  <dd><%= @time_point.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Дата_начала) %>:</strong></dt>
  <dd><%= @time_point.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Максимальный_порог) %>:</strong></dt>
  <dd><%= @time_point.high_threshold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Важность) %>:</strong></dt>
  <dd><%= @time_point.importance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timeline_id) %>:</strong></dt>
  <dd><%= @time_point.timeline_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.назад', :default => t("helpers.links.назад")),
              time_points_path, :class => 'btn'  %>
  <%= link_to t('.Редакт.', :default => t("helpers.links.Редакт.")),
              edit_time_point_path(@time_point), :class => 'btn' %>
  <%= link_to t('.Удалить', :default => t("helpers.links.Удалить")),
              time_point_path(@time_point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Вы уверены ?')) },
              :class => 'btn btn-danger' %>
</div>

