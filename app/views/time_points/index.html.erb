<%- model_class = TimePoint -%>
<div class="container">
<div class="page-header">
  <h1> События </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Заголовок) %></th>
      <th><%= model_class.human_attribute_name(:Описание) %></th>
      <th><%= model_class.human_attribute_name(:Дата_начала) %></th>
      <th><%= model_class.human_attribute_name(:Максимальный_порог) %></th>
      <th><%= model_class.human_attribute_name(:Важность) %></th>
      <th><%= model_class.human_attribute_name(:Иконка) %></th>
      <th><%= model_class.human_attribute_name(:timeline_id) %></th>
      <th><%=t '.Действия', :default => t("helpers.Действия") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_points.each do |time_point| %>
      <tr>
        <td><%= link_to time_point.id, time_point_path(time_point) %></td>
        <td><%= time_point.title %></td>
        <td><%= time_point.description %></td>
        <td><%= time_point.start_date %></td>
        <td><%= time_point.high_threshold %></td>
        <td><%= time_point.importance %></td>
        <td><%= time_point.image %></td>
        <td><%= time_point.timeline_id %></td>
        <td>
          <%= link_to t('.редакт.', :default => t("helpers.links.редакт.")),
                      edit_time_point_path(time_point), :class => 'btn btn-mini' %>
          <%= link_to t('.удалить', :default => t("helpers.links.удалить")),
                      time_point_path(time_point),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Вы уверены ?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Новый")),
            new_time_point_path,
            :class => 'btn btn-primary' %>
