<%- model_class = Timeline -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Заголовок) %></th>
      <th><%= model_class.human_attribute_name(:Фокусировка) %></th>
      <th><%= model_class.human_attribute_name(:Зум) %></th>
      <th><%=t '.Действия', :default => t("helpers.Действия") %></th>
    </tr>
  </thead>
  <tbody>
    <% @timelines.each do |timeline| %>
      <tr>
        <td><%= link_to timeline.id, timeline_path(timeline) %></td>
        <td><%= timeline.title %></td>
        <td><%= timeline.focus_date %></td>
        <td><%= timeline.initial_zoom %></td>
        <td>
          <%= link_to t('.Показать', :default => t("helpers.links.Показать")),
                      timeline_path(timeline), :class => 'btn btn-mini' %>
          <%= link_to t('.Редакт.', :default => t("helpers.links.Редакт.")),
                      edit_timeline_path(timeline), :class => 'btn btn-mini' %>
          <%= link_to t('.Удалить', :default => t("helpers.links.Удалить")),
                      timeline_path(timeline),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Вы уверены ?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Новый', :default => t("helpers.links.Новый")),
            new_timeline_path,
            :class => 'btn btn-primary' %>



