<%- model_class = TimeItem -%>
<div class="container">
<div class="page-header">
  <h1> Точки </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Заголовок) %></th>
      <th><%= model_class.human_attribute_name(:Описание) %></th>
      <th><%= model_class.human_attribute_name(:Дата_начала) %></th>
      <th><%= model_class.human_attribute_name(:Дата_конца) %></th>
      <th><%= model_class.human_attribute_name(:Максимальный_порог) %></th>
      <th><%= model_class.human_attribute_name(:Важность) %></th>
      <th><%= model_class.human_attribute_name(:timeline_id) %></th>
      <th><%=t '.Действия', :default => t("helpers.Действия") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_items.each do |time_item| %>
      <tr>
        <td><%= link_to time_item.id, time_item_path(time_item) %></td>
        <td><%= time_item.title %></td>
        <td><%= time_item.description %></td>
        <td><%= time_item.start_date %></td>
        <td><%= time_item.end_date %></td>
        <td><%= time_item.high_threshold %></td>
        <td><%= time_item.importance %></td>
        <td><%= time_item.timeline_id %></td>
        <td>
          <%= link_to t('.Редакт.', :default => t("helpers.links.Редакт.")),
                      edit_time_item_path(time_item), :class => 'btn btn-mini' %>
          <%= link_to t('.Удалить', :default => t("helpers.links.Удалить")),
                      time_item_path(time_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Вы уверены?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Новый', :default => t("helpers.links.Новый")),
            new_time_item_path,
            :class => 'btn btn-primary' %>
</div>